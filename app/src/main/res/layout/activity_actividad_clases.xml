<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadClases">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView android:id="@+id/imagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/inicio"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button android:id="@+id/botonGuerrero"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="GUERRERO"
                android:layout_marginRight="10dp"/>

            <Button android:id="@+id/botonLadron"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="LADRÃ“N"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <Button android:id="@+id/botonMago"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="MAGO"
                android:layout_marginRight="10dp"/>

            <Button android:id="@+id/botonBerserker"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="BERSERKER"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <Button android:id="@+id/botonaceptar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACEPTAR"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>