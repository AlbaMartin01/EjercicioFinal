<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadMercader">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenMercader"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mercader" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Button android:id="@+id/comerciar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Comerciar"
                android:layout_marginRight="10dp"
                android:visibility="visible"/>

            <Button android:id="@+id/continuar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:layout_marginLeft="10dp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Button android:id="@+id/comprar"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="COMPRAR"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>

            <Button android:id="@+id/vender"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="VENDER"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <Button android:id="@+id/cancelar"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="CANCELAR"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="¿Cuantos deseas comprar?"
            android:visibility="gone"
            android:inputType="number"/>

        <Button
            android:id="@+id/aceptar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="¿Cuantos deseas vender?"
            android:visibility="gone"
            android:inputType="number"/>

        <Button
            android:id="@+id/aceptar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aceptar"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:backgroundTint="@color/white"/>

            <ImageButton android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_pause"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>