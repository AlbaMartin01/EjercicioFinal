<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadRazas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView android:id="@+id/imagenInicio"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/inicio" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <Button android:id="@+id/botonElfo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Elfo"
                android:layout_marginRight="15dp"/>

            <Button android:id="@+id/botonHumano"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="humano"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <Button android:id="@+id/botonEnano"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="enano"
                android:layout_marginRight="15dp"/>

            <Button android:id="@+id/botonGoblin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Goblin"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <Button android:id="@+id/botonAceptar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Aceptar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:backgroundTint="@color/white"/>

            <ImageButton android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_pause"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>